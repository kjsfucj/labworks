#pragma once

#include <string>
#include <iostream>

#define BIT_LENGTH	8

//объявляем переменные классов, перечисляем все что будет в этом классе

class BinNumber {
private:
	bool first_set_operand = true;
	int saved_init_operand;
	int operand;
	char* bits;
	char* from_int_to_bits(int);
	int from_bits_to_int(char*);
	bool is_overflow(signed char, bool);
public:
	BinNumber();
	void set_operand(std::string);
	void set_operand(int);
	int get_operand();

	BinNumber& add(BinNumber&);
	BinNumber& sub(BinNumber&);
	BinNumber& mul(BinNumber&);
	void print(std::string);
};
